# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tiktok_disorders

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Symptom extractor configuration
# EXTRACTOR_PROVIDER can be "anthropic" or "ollama"
EXTRACTOR_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-opus-4-5-20251101
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b

# Data Directories
AUDIO_DIR=./data/audio
TRANSCRIPT_DIR=./data/transcripts
VISUALIZATION_DIR=./data/visualizations

# Whisper Model Configuration (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Analysis Configuration
MIN_CONFIDENCE_SCORE=0.6
CLUSTER_COUNT=5
